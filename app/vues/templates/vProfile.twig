<script>
	history.pushState({}, '', 'admin?entite=utilisateur')
</script>
<section>
	<h1>{{ titre|upper }}</h1>
	<a href="admin?entite=utilisateur&action=m">Modifier mon profile</a>
	<a href="admin?entite=utilisateur&action=s">Supprimer mon profile</a>
	<p class="messageRetourAction {{ classRetour }}">{{ messageRetourAction|raw }}&nbsp;</p>

	<p>Nom:
		{{ oUtilisateur.utilisateur_nom}}</p>
	<p>Prénom:
		{{ oUtilisateur.utilisateur_prenom}}</p>
	<p>Courriel:
		{{ oUtilisateur.utilisateur_courriel}}</p>

	<h2>Ajouter un timbre</h2>
	<form method="POST" action="admin?entite=timbre&action=a">

		<label>Nom</label>
		<input name="timbre_nom" value="{{ timbre.timbre_nom }}">
		<span>&nbsp;{{ erreurs.timbre_nom }}</span>

		<label>Pays</label>
		<select name="timbre_pays_id">
			<option value="pays_id"></option>
		</select>
		<span>&nbsp;{{ erreurs.timbre_pays_id }}</span>

		<label>Année</label>
		<input name="timbre_annee" value="{{ timbre.timbre_annee }}">
		<span>&nbsp;{{ erreurs.timbre_annee}}</span>

		<label>Description</label>
		<input type="text" name="timbre_description" value="{{ timbre.timbre_description }}">
		<span>&nbsp;{{ erreurs.timbre_description }}</span>

		<label>Dimension</label>
		<input name="timbre_dimension" value="{{ timbre.timbre_dimension }}">
		<span>&nbsp;{{ erreurs.timbre_dimension }}</span>

		<label>Certification</label>
		<input name="timbre_certification" value="{{ timbre.timbre_certification }}">
		<span>&nbsp;{{ erreurs.timbre_certification }}</span>

		<label>Couleur</label>
		<input name="timbre_couleur" value="{{ timbre.timbre_couleur }}">
		<span>&nbsp;{{ erreurs.timbre_couleur }}</span>

		<label>Tirage</label>
		<input name="timbre_tirage" value="{{ timbre.timbre_tirage }}">
		<span>&nbsp;{{ erreurs.timbre_tirage }}</span>

		<label>Condition</label>
		<select name="timbre_condition_id">
			<option value="condition_id"></option>
		</select>
		<span>&nbsp;{{ erreurs.timbre_condition_id }}</span>

		<label>Status</label>
		<select name="timbre_status_id">
			<option value="status_id"></option>
		</select>
		<span>&nbsp;{{ erreurs.timbre_status_id }}</span>

		<input type="hidden" name="timbre_utilisateur_id" value="{{ oUtilisateur.utilisateur_id }}">

		<input class="btn" type="submit" value="Soumettre">

	</form>

	<h2>Ajouter une enchère</h2>
	{# <div class="g utilisateurs">
				<div class="t">Id</div>
				<div class="t">Utilisateur</div>
				<div class="t">Courriel</div>
				<div class="t">Profil</div>
				<div class="t">Actions</div>
				{% for utilisateur in utilisateurs %}
					<div class="l">
						<div class="c dr">{{ utilisateur.utilisateur_id }}</div>
						<div class="c   ">{{ utilisateur.utilisateur_prenom }}
							{{ utilisateur.utilisateur_nom }}</div>
						<div class="c dr">{{ utilisateur.utilisateur_courriel }}</div>
						<div class="c ">{{ utilisateur.utilisateur_profil }}</div>
						<div class="c ">
							<a href="admin?entite=utilisateur&action=m&utilisateur_id={{ utilisateur.utilisateur_id }}">modifier</a>
							{% if utilisateur.utilisateur_id %}
								<span class="confirmer" data-href="admin?entite=utilisateur&action=s&utilisateur_id={{ utilisateur.utilisateur_id }}">supprimer</span>
								<a href="admin?entite=utilisateur&action=genererMdp&utilisateur_id={{ utilisateur.utilisateur_id }}">générer mdp</a>
							{% endif %}
						</div>
					</div>
				{% endfor %}
			</div> #}
</section>
{{ include("modaleSuppression.twig") }}
